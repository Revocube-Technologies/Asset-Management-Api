{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "root/*": ["./*"]
    },
    "typeRoots": ["types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["types/**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules", "tests"]
}